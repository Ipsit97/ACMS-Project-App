<?xml version="1.0" encoding="utf-8"?>





<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
   >

    <ImageView
        android:id="@+id/img_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
<TextView
    android:id="@+id/tv_img_name1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="450dp"
    android:textSize="15dp"
    android:text="Description: "
    android:textStyle="bold"
    android:textColor="@android:color/black" />

<TextView
    android:id="@+id/tv_img_name2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_below="@id/tv_img_name1"
    android:textSize="15dp"
    android:textStyle="bold"
    android:text="Contact: "
    android:textColor="@android:color/black" />
<TextView
    android:id="@+id/tv_img_name3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_below="@id/tv_img_name2"
    android:textStyle="bold"
    android:textSize="15dp"
    android:text="Address: "
    android:textColor="@android:color/black" />
<TextView
    android:id="@+id/tv_img_name4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_below="@id/tv_img_name3"
    android:textSize="15dp"
    android:textStyle="bold"
    android:text="Free Hours: "
    android:textColor="@android:color/black" />




</RelativeLayout>